<body class="bg-black">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark bg-opacity-50">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/film">Star Wars</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link active text-warning" aria-current="page" href="/film">Films</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-warning" aria-current="page" href="/character">Characters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-warning" aria-current="page" href="/logout">Logout</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
<div class="container-fluid">
    {% block body %}{% endblock %}
</div>
</body>
</html>
